<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ejercicio1_2.Views.Page1View">
    <ContentPage.Content>
       <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Ejercicio 1.2" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Entry x:Name="nombre" Placeholder="Nombre"></Entry>
        <Entry x:Name="apellido" Placeholder="Apellido"></Entry>
        <Entry x:Name="edad" Placeholder="Edad"></Entry>
        <Entry x:Name="correo" Placeholder="Correo Electronico"></Entry>

        <Button Text="Enviar Informacion" Clicked="btn_enviar_info" x:Name="btnenviar"></Button>
    </StackLayout>
    </ContentPage.Content>
</ContentPage>